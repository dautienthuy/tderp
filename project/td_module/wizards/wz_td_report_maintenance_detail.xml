<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>		 
		<record id="wz_td_report_maintenance_view_form" model="ir.ui.view">
			<field name="name">wz.td.report.maintenance.form</field>
			<field name="model">wz.td.report.maintenance</field>
			<field name="arch" type="xml">
				<form readonly="1" create="false" >
					<group>
						<group>
							<field name="from_date" required="1"/>
							<field name="to_date" required="1"/>
						</group>
						<group>
						</group>
					</group>
					<notebook>
						<page name="report_detail" string="Chi tiết">
							<field name="detail_ids" nolabel="1">
								<tree create="0" delete="0" >
									<field name="code"/>
									<field name="bhbt"/>
									<field name="rp_name"/>
									<field name="phone"/>
									<field name="street"/>
									<field name="so_thang"/>
									<field name="ghi_chu"/>
									<field name="so_lan"/>
									<field name="ngay_bd"/>
									<field name="ngay_giahan"/>
									<field name="ngay_kt"/>
									<field name="du_kien"/>
									<field name="ky"/>
									<field name="sua_chua"/>
									<field name="tem_kd"/>
									<field name="state"/>
								</tree>
								<form edit="0" create="0" delete="0">
								</form>
							</field>
						</page>
					</notebook>
				</form>
			</field>
		</record>		

		<record id="action_print_wz_td_report_maintenance" model="ir.actions.act_window" >
			<field name="name">Báo cáo bảo trì và sửa chữa</field>
			<field name="res_model">wz.td.report.maintenance</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="wz_td_report_maintenance_view_form"/>
            <field name="target">current</field>
		</record> 
		
		<!-- Project & Contract > Report > Monthly Received Work -->
		<menuitem id="menu_report_maintenance"
			name="Báo cáo bảo trì và sửa chữa"
			action="action_print_wz_td_report_maintenance"
			parent="maintenance.maintenance_reporting" 
			sequence="50" />    
    </data>
</odoo>