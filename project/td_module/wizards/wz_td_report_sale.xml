<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>		 
		<record id="wz_td_report_sale_view_form" model="ir.ui.view">
			<field name="name">wz.td.report.sale.form</field>
			<field name="model">wz.td.report.sale</field>
			<field name="arch" type="xml">
				<form string="Cash on Hand" create="false" readonly="1">
					<header>
						<!-- <button string='Print' name="print_report" type="object" class="oe_highlight"/> -->
						<button string='Compute' name="compute" type="object"/>
						<!-- <button string='Details' name="action_open_detail" type="object"/> -->
					</header>
					<sheet>
						<group colspan="4" col="4">
							<group>
								<field name='date_from' required="1"/>
								<field name='state' required="1"/>
							</group>
							<group>
								<field name='date_to' required="1"/>
							</group>
						</group>
						<notebook>
							<page name="salereport_detail" string="Detail">
								<field name="detail_ids" colspan="4" nolabel="1" readonly="1" context="{'date_from':date_from,'date_to':date_to,'detail_ids':detail_ids}" options="{'always_reload':True}">
									<tree>
										<field name='rp_name'/>
										<field name='code'/>
										<field name='client_code'/>
										<field name='amount_total' sum='Sub-Total'/>
										<field name='amount_payment' sum='Sub-Total'/>
										<field name='amount_paid' sum='Sub-Total'/>
										<field name='street'/>
										<field name='phone'/>
										<field name='feature'/>
										<field name='duration_contract'/>
										<field name='work_progress'/>
										<field name='est_progress'/>
										<field name='moving_plan'/>
										<field name='date'/>
										<field name='commitment_date'/>
										<field name='date_done'/>
									</tree>
								</field>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>		
		
		<record id="action_print_wz_td_report_sale_detail" model="ir.actions.act_window">
			<field name="name">Danh sách bán hàng</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">wz.td.report.sale</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="wz_td_report_sale_view_form"/>
			<field name="target">current</field>
		</record>

		<!-- Project & Contract > Report > Monthly Received Work -->
		<menuitem id="menu_report_td_sale"
			name="Danh sách bán hàng"
			action="action_print_wz_td_report_sale_detail" 		
			parent="sale.menu_sale_report" 
			sequence="50" />
    </data>
</odoo>