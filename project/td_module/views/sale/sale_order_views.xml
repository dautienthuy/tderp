<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_action_sale_plan" model="ir.actions.act_window">
            <field name="name">Kế hoạch</field>
            <field name="res_model">sale.plan</field>
            <field name="binding_model_id" ref="sale.model_sale_order"/>
            <field name="view_mode">tree,form</field>
            <field name="context">{
                'default_order_id': active_id,
            }</field>
            <field name="domain">[('order_id', '=', active_id)]</field>
        </record>
    </data>
    <data>
        <record id="order_form_td_inherit" model="ir.ui.view">
            <field name="name">sale.order.form.td.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button name="%(sale_action_sale_plan)d"
                        class="oe_stat_button"
                        icon="fa-money"
                        type="action">
                        <field name="sale_plan_count" widget="statinfo" string="Kế hoạch"/>
                    </button>
                </div>
                <xpath expr="//button[@name='action_draft']" position="after">
                     <button name="btn_sale_plan" type="object" string="tạo kế hoạch"/>
                </xpath>
                
                <xpath expr="//group[@name='sales_person']/label[@for='require_signature']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//group[@name='sales_person']/div[last()]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//group[@name='sale_info']/label[@for='fiscal_position_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//group[@name='sale_info']/div[last()]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            
                <group name="sale_reporting" position="replace">
                    <group string="Tracking" name="sale_reporting">
                        <group name="technical" colspan="2" class="mb-0">
                            <field name="origin"/>
                            <field name="payment_method"/>
                        </group>
                        <group name="utm_link" colspan="2" class="mt-0">
                        </group>
                    </group>
                </group>
                <xpath expr="//button[@id='create_invoice'][1]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//button[@id='create_invoice_percentage'][1]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//button[@name='action_quotation_send'][1]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//button[@name='action_quotation_send'][2]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//button[@name='action_quotation_send'][3]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//button[@name='action_quotation_send'][4]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <field name="date_order" position="before">
                    <field name="date_done"/>
                    <field name="feature"/>
                </field>
                <field name="partner_id" position="before">
                    <field name="client_code"/>
                </field>
                <field name="payment_term_id" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <xpath expr="//page[@name='other_information']" position="after">
                    <page string="Điều khoản thanh toán" name="payment_term">
                        <field name="sale_payment_term_ids" mode="tree" nolabel="1" string="Payment Term" limit="5">
                            <tree string="Payment Term" editable="bottom" limit="5" options="{'limit': 5}">
                                <field name="type"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="sequence"/>
                                <field name="name"/>
                                <field name="percent_payment"/>
                                <field name="total_amount"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
