<odoo>
    <record id="view_sale_contract_form" model="ir.ui.view">
        <field name="name">sale.contract.form</field>
        <field name="model">sale.contract</field>
        <field name="arch" type="xml">
            <form string="Sale Contract">
                <header>
                    <button name="action_confirm" string="Xác nhận" type="object" class="oe_highlight"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_set_draft" string="Mở" type="object"
                            attrs="{'invisible': [('state', '=', 'draft')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,cancel"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nhập thông tin tên hợp đồng vào đây ..."/>
                        </h1>
                    </div>
                    <group string="Hợp đồng">
                        <group>
                            <field name="code" invisible="1"/>
                            <field name="number" required="1"/>
                            <field name="sale_type" required="1"/>
                        </group>
                        <group>
                            <field name="order_id"/>
                            <field name="date_order"/>
                            <field name="date_contract"/>
                        </group>
                    </group>
                    <group string="Khách hàng">
                        <group>
                            <field name="partner_id"/>
                        </group>
                        <group>
                        </group>
                    </group>
                    <notebook>
                        <page string="Chi tiết">
                            <field name="contract_line_ids">
                                <tree editable="bottom">
                                    <field name="product_template_id"/>
                                    <field name="name"/>
                                    <field name="product_uom_qty"/>
                                    <field name="price_unit"/>
                                    <field name="price_subtotal" readonly="1"/>
                                </tree>
                            </field>
                            <group name="note_group" col="6" class="mt-2 mt-md-0">
                                <group colspan="4">
                                </group>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                    <field name="amount_total" nolabel="1" colspan="2" readonly="1"/>
                                </group>
                                <div class="clearfix"/>
                            </group>
                        </page>
                        <page string="Điều khoản thanh toán" name="payment_term">
                            <field name="sale_payment_term_ids" mode="tree" nolabel="1" string="Payment Term" limit="5">
                                <tree string="Payment Term" editable="bottom" limit="5" options="{'limit': 5}">
                                    <field name="type"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="sequence"/>
                                    <field name="name"/>
                                    <field name="percent_payment"/>
                                    <field name="total_amount"/>
                                    <field name="total_paid"/>
                                    <field name="date"/>
                                    <field name="payment_type"/>
                                    <field name="account_bank"/>
                                    <field name="bank"/>
                                    <field name="ghi_chu"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_sale_contract_tree" model="ir.ui.view">
        <field name="name">sale.contract.tree</field>
        <field name="model">sale.contract</field>
        <field name="arch" type="xml">
            <tree>
                <field name="number"/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="date_contract"/>
            </tree>
        </field>
    </record>
</odoo>
