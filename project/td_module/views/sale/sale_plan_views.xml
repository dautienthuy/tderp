<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_plan_view_form" model="ir.ui.view">
        <field name="name">sale.plan.form</field>
        <field name="model">sale.plan</field>
        <field name="arch" type="xml">
            <form string="Sale Plan">
                <header>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="order_id"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                    <group>
                        <group string="Tiến độ hợp đồng">
                            <field name="excurtion_progress_ids" nolabel="1" colspan="2">
                                <tree editable="bottom">
                                    <field name="date" />
                                    <field name="name" />
                                </tree>
                            </field>
                        </group>
                        <group string="Tiến độ thi công">
                            <field name="construction_schedule_ids" nolabel="1" colspan="2">
                                <tree editable="bottom">
                                    <field name="date" />
                                    <field name="name" />
                                </tree>
                            </field>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sale_plan_view_tree" model="ir.ui.view">
        <field name="name">sale.plan.tree</field>
        <field name="model">sale.plan</field>
        <field name="arch" type="xml">
            <tree string="Equipment Parts List">
                <field name="date"/>
                <field name="name"/>
            </tree>
        </field>
    </record>
</odoo>
