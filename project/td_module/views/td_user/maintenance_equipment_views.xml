<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
    <!-- Tree -->
    <record id="maintenance_equipment_view_td_user_tree" model="ir.ui.view">
        <field name="name">maintenance.equipment.view.tduser.tree</field>
        <field name="model">maintenance.equipment</field>
        <field name="arch" type="xml">
            <tree string="Maintenance Equipment" create="0" edit="0" delete="0">
                <field name="message_needaction" invisible="1"/>
                <field name="name"/>
                <field name="owner_user_id" string="Owner"/>
                <field name="assign_date" groups="base.group_no_one"/>
                <field name="serial_no"/>
                <field name="technician_user_id"/>
                <field name="category_id"/>
                <field name="partner_id" invisible="1"/>
                <field name="activity_exception_decoration" widget="activity_exception"/>
            </tree>
        </field>
    </record>
    <!-- Form -->
    <record id="maintenance_equipment_view_td_user_form" model="ir.ui.view">
        <field name="name">maintenance.equipment.view.tduser.form</field>
        <field name="model">maintenance.equipment</field>
        <field name="arch" type="xml">
            <form string="Equipments" create="0" edit="0" delete="0">
                <sheet>
                    <field name="active" invisible="1"/>
                    <field name="company_id" invisible="1"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" readonly="1" placeholder="e.g. LED Monitor"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="code" readonly="1"/>
                            <field name="customer_id" options="{&quot;no_open&quot;: True}" readonly="1"/>
                            <field name="street" readonly="1"/>
                            <field name="phone" readonly="1"/>
                            <field name="category_id" options="{&quot;no_open&quot;: True}" readonly="1"/>
                            <field name="owner_user_id" options="{&quot;no_open&quot;: True}" readonly="1"/>
                            <field name="number_maintenance" readonly="1"/>
                            <field name="backlog_status" readonly="1"/>
                            <field name="backlog_note" readonly="1"/>
                        </group>
                        <group>
                            <field name="maintenance_team_id" options="{&quot;no_open&quot;: True}" readonly="1"/>
                            <field name="technician_user_id" options="{&quot;no_open&quot;: True}" readonly="1"/>
                            <field name="assign_date" readonly="1"/>
                            <field name="scrap_date" readonly="1"/>
                            <field name="location" readonly="1"/>
                            <field name="parent_equipment_id" options="{&quot;no_open&quot;: True}" readonly="1"/>
                            <field name="order_id" options="{'no_open': True, 'no_create': True}" readonly="1"/>
                            <field name="expiry_inspection_stamp" readonly="1"/>
                            <field name="maintenance_type" readonly="1"/>
                            <field name="last_working_day" readonly="1"/>
                            <field name="last_employee_id" options="{'no_open': True, 'no_create': True}" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Mô tả" name="description">
                            <field name="note" readonly="1"/>
                        </page>
                        <page string="Thông tin sản phẩm" name="product_information">
                            <group>
                                <group>
                                    <field name="partner_id" options="{&quot;no_open&quot;: True}" readonly="1"/>
                                    <field name="partner_ref" readonly="1"/>
                                    <field name="model" readonly="1"/>
                                    <field name="serial_no" readonly="1"/>
                                </group>
                                <group>
                                    <field name="effective_date" readonly="1"/>
                                    <field name="warranty_date" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Yêu cầu bảo trì" name="mainten_requipment_employee_list">
                            <field name="mainten_requipment_employee_ids">
                                <tree readonly="1">
                                    <field name="user_id"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="delivery_date"/>
                                    <field name="code_maintenance"/>
                                    <field name="maintenance_request_id"/>
                                </tree>
                                <form>
                                    <field name="user_id" options="{&quot;no_open&quot;: True}" readonly="1"/>
                                    <field name="start_date" readonly="1"/>
                                    <field name="end_date" readonly="1"/>
                                    <field name="delivery_date" readonly="1"/>
                                    <field name="code_maintenance" readonly="1"/>
                                    <field name="maintenance_request_id" readonly="1"/>
                                </form>
                            </field>
                        </page>
                        <page string="Bảo trì" name="maintenance">
                            <group>
                                <group name="maintenance">
                                    <field name="next_action_date" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</data>
</odoo>
