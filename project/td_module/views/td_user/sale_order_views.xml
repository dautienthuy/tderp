<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree -->
        <record id="sale_order_view_tduser_tree" model="ir.ui.view">
            <field name="name">sale.order.view.tduser.tree</field>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <tree string="Sales Orders" create="0" edit="0" delete="0" sample="1" decoration-muted="state == 'cancel'">
                    <field name="message_needaction" invisible="1"/>
                    <field name="client_code"/>
                    <field name="commitment_date" optional="hide"/>
                    <field name="expected_date" optional="hide"/>
                    <field name="partner_id" readonly="1"/>
                    <field name="street"/>
                    <field name="duration_contract"/>
                    <field name="team_id" optional="hide"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="tag_ids" optional="hide" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    <field name="state" invisible="1"/>
                </tree>
            </field>
        </record>
        <!-- Form -->
        <record id="sale_order_view_tduser_form" model="ir.ui.view">
            <field name="name">sale.order.view.tduser.form</field>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <form string="Sale Order" create="0" edit="0" delete="0">
                </form>
            </field>
        </record>
    </data>
</odoo>
