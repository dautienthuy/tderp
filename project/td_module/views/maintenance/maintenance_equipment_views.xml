<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="maintenance_equipment_view_form_inherit_td" model="ir.ui.view">
            <field name="name">maintenance.equipment.view.form.inherit.td</field>
            <field name="model">maintenance.equipment</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="before">
                    <header>
                        <button name="btn_generate_requests" string="Tạo yêu cầu bảo trì" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'open')]}"/>
                        <!-- -->
                        <button name="action_confirm" string="Xác nhận" type="object" class="oe_highlight"
                                attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_set_done" string="Đóng" type="object" class="oe_highlight"
                                attrs="{'invisible': [('state', '!=', 'open')]}"/>
                        <button name="action_set_draft" string="Mở" type="object"
                                attrs="{'invisible': ['|', ('state', '=', 'draft'), ('state', '=', 'close')]}"/>
                        <button name="action_cancel" string="Hủy" type="object"
                                attrs="{'invisible': ['|', ('state', '=', 'close'), ('state', '=', 'cancelled')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,open,close,cancelled,paused"/>
                    </header>
                </xpath>
                <field name="category_id" position="before">
                    <field name="code"/>
                    <field name="customer_id" widget="res_partner_many2one" context="{'res_partner_search_mode': 'customer'}" options="{&quot;always_reload&quot;: True}"/>
                    <field name="street"/>
                    <field name="phone"/>
                </field>
                <field name="category_id" position="after">
                    <field name="last_working_day"/>
                    <field name="last_employee_id"/>
                    <field name="number_maintenance"/>
                    <field name="backlog_status"/>
                    <field name="backlog_note"/>
                </field>
                <xpath expr="//field[@name='location']" position="after">
                    <field name="parent_equipment_id"/>
                    <field name="order_id" options="{'no_open': True, 'no_create': True}"/>
                    <field name="expiry_inspection_stamp"/>
                </xpath>
                <xpath expr="//page[@name='maintenance']" position="before">
                    <page string="Nhân sự thực hiện bảo trì" name="mainten_requipment_employee_list">
                        <field name="mainten_requipment_employee_ids">
                            <tree editable="bottom">
                                <field name="employee_id"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="delivery_date"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Equipment Parts List" name="page_equipment_parts_list">
                        <field name="equipment_parts_list">
                            <tree string="Equipment Parts List" editable="bottom">
                                <field name="code"/>
                                <field name="uom_id"/>
                                <field name="quantity"/>
                                <field name="description"/> 
                            </tree>
                        </field>
                    </page>
                    <page string="Maintenance Cycle" name="page_maintenance_cycle">
                        <field name="maintenance_cycle_ids">
                            <tree string="Maintenance Cycle" editable="bottom">
                                <field name="maintenance_checklist_id"/>
                                <field name="date"/>
                                <field name="uom_id"/>
                                <field name="warning_equipment"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
    <!-- == -->
    <data>
        <record id="maintenance_equipment_view_form_inherit_hr_td" model="ir.ui.view">
            <field name="name">maintenance.equipment.view.form.inherit.hr.td</field>
            <field name="model">maintenance.equipment</field>
            <field name="inherit_id" ref="hr_maintenance.maintenance_equipment_view_form_inherit_hr"/>
            <field name="arch" type="xml">
                <field name="equipment_assign_to" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
            </field>
        </record>
    </data>
</odoo>
