<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="maintenance_target_view_form" model="ir.ui.view">
        <field name="name">maintenance.target.form</field>
        <field name="model">maintenance.target</field>
        <field name="arch" type="xml">
            <form string="Maintenance Target Form">
                <header>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="month"/>
                            <field name="year"/>
                        </group>
                        <group>
                            <field name="from_date"/>
                            <field name="to_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="details" string="Theo loáº¡i">
                            <field name="line_ids" colspan="4" nolabel="1">
                                <tree editable="top">
                                    <field name='user_id'/>
                                    <field name='working_day'/>
                                    <field name='target_week1'/>
                                    <field name='target_week2'/>
                                    <field name='target_week3'/>
                                    <field name='target_week4'/>
                                    <field name='target_requests'/>
                                    <field name='achieved_requests'/>
                                    <field name='progress'/>
                                    <field name='request_ids' widget="many2many_tags"/>
                                </tree>
                                <form create="0" delete="0">
                                    <group>
                                        <group>
                                            <field name='user_id'/>
                                            <field name='working_day'/>
                                            <field name='target_week1'/>
                                            <field name='target_week2'/>
                                            <field name='target_week3'/>
                                            <field name='target_week4'/>
                                        </group>
                                        <group>
                                            <field name='target_requests'/>
                                            <field name='achieved_requests'/>
                                            <field name='progress'/>
                                            <field name='request_ids' widget="many2many_tags"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="maintenance_target_view_tree" model="ir.ui.view">
        <field name="name">maintenance.target.tree</field>
        <field name="model">maintenance.target</field>
        <field name="arch" type="xml">
            <tree string="Maintenance Target List">
                <field name="name"/>
                <field name="from_date"/>
                <field name="to_date"/>
            </tree>
        </field>
    </record>
</odoo>
