<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="maintenance_checklist_view_form" model="ir.ui.view">
        <field name="name">maintenance.checklist.form</field>
        <field name="model">maintenance.checklist</field>
        <field name="arch" type="xml">
            <form string="Equipment Parts List">
                <header>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                    </group>                   
                </sheet>
            </form>
        </field>
    </record>

    <record id="maintenance_checklist_view_tree" model="ir.ui.view">
        <field name="name">maintenance.checklist.tree</field>
        <field name="model">maintenance.checklist</field>
        <field name="arch" type="xml">
            <tree string="Equipment Parts List">
                <field name="code"/>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>
</odoo>
