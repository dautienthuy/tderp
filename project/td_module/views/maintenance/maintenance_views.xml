<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- equiment.request : views -->
    <record id="maintenance_request_view_search_inherit_td" model="ir.ui.view">
        <field name="name">maintenance.request.view.search.inherit.td</field>
        <field name="model">maintenance.request</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_request_view_search"/>
        <field name="arch" type="xml">
            <xpath expr="field[@name='user_id']" position="after">
                <field name="date_start"/>
                <field name="date_end"/>                
            </xpath>            
        </field>
    </record>

    <record id="maintenance_request_view_form_inherit_td" model="ir.ui.view">
        <field name="name">maintenance.request.view.form.inherit.td</field>
        <field name="model">maintenance.request</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_request_view_form"/>
        <field name="arch" type="xml">
            <field name="request_date" position="after">
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="maintenance_checklist_id"/>
                <field name="date_repair"/>
                <field name="order_id"/>
            </field>
            <xpath expr="//group[last()]" position="after">
                <notebook>
                    <page string="Chi tiết công việc" name="final_settlement_line">
                        <field name="final_settlement_line_ids">
                            <tree string="Equipment Parts List" editable="bottom">
                                <field name="task_detail"/>
                                <field name="uom_id"/>
                                <field name="task_qty"/>
                                <field name="equipment_id"/>
                                <field name="tech_spec"/>  
                            </tree>
                        </field>
                    </page>
                    <page string="Thông tin" name="info">
                        <table class="table table-striped table-hover responsive-table">
                            <thead class="thead-light">
                                <tr>
                                    <th>Thông số kỹ thuật</th>
                                    <th>Đơn vị</th>
                                    <th class='text-right'>Số lượng</th>
                                    <th class='text-right'>Đơn Giá</th>
                                    <th class='text-right'>Thành tiền</th>
                                    <th class='text-right'>Kết quả</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td data-label="Thông số kỹ thuật">
                                        <field name="technical_spec"/>
                                    </td>
                                    <td data-label="Đơn vị">
                                        <field name="uom_id"/>
                                    </td>
                                    <td data-label="Đơn Giá">
                                        <field name="quantity"/>
                                    </td>
                                    <td data-label="Số lượng">
                                        <field name="unit_price"/>
                                    </td>
                                    <td data-label="Thành tiền">
                                        <field name="amount"/>
                                    </td>
                                    <td data-label="Kết quả">
                                        <field name="result"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <!-- <group>
                            <field name="technical_spec"/>
                            <field name="uom_id"/>
                            <field name="quantity"/>
                            <field name="result"/>
                        </group> -->
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>
</odoo>
