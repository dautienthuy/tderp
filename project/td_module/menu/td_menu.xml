<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- === Maintenance ====-->
    <!-- Root-->
    <menuitem id="td_sale_maintence_menu_root"
        name="Hợp đồng &amp; Bảo trì"
        web_icon="td_module,static/description/icon.svg"
        active="1"
        sequence="1">
    </menuitem>
        <!-- Maintenance Request-->
        <!-- Action-->
        <record id="action_hr_equipment_request_view_td_user" model="ir.actions.act_window">
            <field name="name">Bảo trì</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">maintenance.request</field>
            <field name="view_mode">calendar,tree,form,pivot</field>
            <field name="view_id" ref="hr_equipment_view_calendar_td_user"/>
        </record>
        <!-- Calendar -->
        <record id="action_hr_equipment_request_view_td_user_calendar" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">calendar</field>
            <field name="view_id" ref="hr_equipment_view_calendar_td_user"/>
            <field name="act_window_id" ref="action_hr_equipment_request_view_td_user"/>
        </record>
        <!-- Tree -->
        <record id="action_hr_equipment_request_view_td_user_tree" model="ir.actions.act_window.view">
            <field eval="5" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="hr_equipment_request_view_td_user_tree"/>
            <field name="act_window_id" ref="action_hr_equipment_request_view_td_user"/>
        </record>
        <!-- Form -->
        <record id="action_hr_equipment_request_view_td_user_form" model="ir.actions.act_window.view">
            <field eval="10" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="hr_equipment_request_view_td_user_form"/>
            <field name="act_window_id" ref="action_hr_equipment_request_view_td_user"/>
        </record>
        <!-- Pivot -->
        <record id="action_hr_equipment_request_view_td_user_pivot" model="ir.actions.act_window.view">
            <field eval="15" name="sequence"/>
            <field name="view_mode">pivot</field>
            <field name="view_id" ref="hr_equipment_request_view_pivot_td_user"/>
            <field name="act_window_id" ref="action_hr_equipment_request_view_td_user"/>
        </record>
        <!-- menu -->
        <menuitem id="menu_hr_equipment_request_view_td_user" 
            name="Bảo trì"
            action="action_hr_equipment_request_view_td_user"
            parent="td_sale_maintence_menu_root"
            sequence="10"/>
</odoo>
